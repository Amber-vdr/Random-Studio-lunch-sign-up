<%- include('./partials/head.ejs') %>

<!-- The main content -->
<main class="main-sign-up">
  <section class="container">
    <article class="form-outer">
      <!-- Start form -->
      <form method="#" class="sign-up-form">
        <!-- Start log in page -->
        <fieldset class="page">
          <legend class="form-legend">What is your name?</legend>

          <div class="field">
            <!-- <label for="firstname">Name</label> -->
            <input
              type="text"
              id="firstname"
              name="firstname"
              placeholder="Name"
              required
            />
          </div>

          <div class="field">
            <!-- <label for="lastname">Last name</label> -->
            <input
              type="text"
              id="lastname"
              name="lastname"
              placeholder="Last name"
              required
            />
          </div>
        </fieldset>
        <!-- End log in page -->

        <!-- Start office page -->
        <fieldset class="page">
          <legend class="form-legend">
            On which days will you be in the office?
          </legend>

          <div class="field">
            <div class="options-group">
              <label
                ><input type="checkbox" name="options[]" value="Monday" />
                Monday</label
              >
              <label
                ><input type="checkbox" name="options[]" value="Tuesday" />
                Tuesday</label
              >
              <label
                ><input type="checkbox" name="options[]" value="Wednesday" />
                Wednesday</label
              >
              <label
                ><input type="checkbox" name="options[]" value="Thursday" />
                Thursday</label
              >
              <label
                ><input type="checkbox" name="options[]" value="Friday" />
                Friday</label
              >
            </div>
          </div>
        </fieldset>
        <!-- End office page -->

        <!-- Start allergy page -->
        <fieldset class="page">
          <legend class="form-legend">Do you have any allergies?</legend>

          <div class="field">
            <div class="allergy-group">
              <label
                ><input type="checkbox" name="allergy[]" value="Milk" />
                Milk</label
              >
              <label
                ><input type="checkbox" name="allergy[]" value="Eggs" />
                Eggs</label
              >
              <label
                ><input type="checkbox" name="allergy[]" value="Fish" />
                Fish</label
              >
              <label
                ><input type="checkbox" name="allergy[]" value="Shellfish" />
                Shellfish</label
              >
              <label
                ><input type="checkbox" name="allergy[]" value="Tree-nuts" />
                Tree nuts</label
              >
              <label
                ><input type="checkbox" name="allergy[]" value="Peanuts" />
                Peanuts</label
              >
              <label
                ><input type="checkbox" name="allergy[]" value="Wheat" />
                Wheat</label
              >
              <label
                ><input type="checkbox" name="allergy[]" value="Soybeans" />
                Soybeans</label
              >
              <label
                ><input type="checkbox" name="allergy[]" value="Sesame" />
                Sesame</label
              >
              <label
                ><input type="checkbox" name="allergy[]" value="None" />
                None</label
              >
            </div>
          </div>
        </fieldset>
        <!-- End allergy page -->

        <!-- Start preference page -->
        <fieldset class="page">
          <legend class="form-legend">Do you have any preferences?</legend>

          <div class="field">
            <div class="preference-group">
              <label
                ><input type="radio" name="preference[]" value="Vegetarian" />
                Vegetarian</label
              >
              <label
                ><input type="radio" name="preference[]" value="Pescatarian" />
                Pescatarian</label
              >
              <label
                ><input type="radio" name="preference[]" value="Flexitarian" />
                Flexitarian</label
              >
              <label
                ><input type="radio" name="preference[]" value="Vegan" />
                Vegan</label
              >
              <label
                ><input type="radio" name="preference[]" value="Halal" />
                Halal</label
              >
              <label
                ><input type="radio" name="preference[]" value="Kosher" />
                Kosher</label
              >
              <label
                ><input type="radio" name="preference[]" value="None" />
                None</label
              >
            </div>
          </div>
        </fieldset>
        <!-- End preference page -->

        <!-- Start notes page -->
        <fieldset class="page">
          <legend class="form-legend">
            Do you have any notes for the chef?
          </legend>

          <div class="field">
            <div class="notes-group">
              <textarea id="note" name="note"></textarea>
            </div>
          </div>

          <div class="field">
            <button type="submit" class="submit">Send</button>
          </div>
        </fieldset>
        <!-- End notes page -->
      </form>
    </article>
  </section>
</main>

<%- include('./partials/foot.ejs') %>
