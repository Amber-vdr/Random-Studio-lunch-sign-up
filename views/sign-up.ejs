<%- include('./partials/head.ejs') %>

<!-- The main content -->
<main class="main-sign-up">
    <section class="container">
        <header class="hero">
            <a href="/index.ejs" class="link-arrow-back"><i class="fa-solid fa-arrow-left" style="color: #fbfbfb"></i></a>
            <h1 class="title-sign-up">Sign up for lunch</h1>
        </header>
        <article class="form-outer">
            <!-- Start form -->
            <form method="#" class="sign-up-form">
                <!-- Start log in page -->
                <fieldset class="page">
                    <legend class="form-legend">What is your name?</legend>

                    <div class="field">
                        <!-- <label for="firstname">Name</label> -->
                        <input type="text" id="firstname" name="firstname" placeholder="Name" required />
                    </div>

                    <div class="field">
                        <!-- <label for="lastname">Last name</label> -->
                        <input type="text" id="lastname" name="lastname" placeholder="Last name" required />
                    </div>
                </fieldset>
                <!-- End log in page -->

                <!-- Start office page -->
                <fieldset class="page">
                    <legend class="form-legend">On which days will you be in the office?</legend>

                    <div class="field">
                        <div class="options-group">
                            <label><input type="checkbox" name="options[]" value="option1" /> Monday</label>
                            <label><input type="checkbox" name="options[]" value="option2" /> Tuesday</label>
                            <label><input type="checkbox" name="options[]" value="option3" /> Wednesday</label>
                            <label><input type="checkbox" name="options[]" value="option4" /> Thursday</label>
                            <label><input type="checkbox" name="options[]" value="option5" /> Friday</label>
                        </div>
                    </div>
                </fieldset>
                <!-- End office page -->

                <!-- Start allergy page -->
                <fieldset class="page">
                    <legend class="form-legend">Do you have any allergies?</legend>

                    <div class="field">
                        <div class="allergy-group">
                            <label><input type="checkbox" name="allergy[]" value="allergy1" /> Milk</label>
                            <label><input type="checkbox" name="allergy[]" value="allergy2" /> Eggs</label>
                            <label><input type="checkbox" name="allergy[]" value="allergy3" /> Fish</label>
                            <label><input type="checkbox" name="allergy[]" value="allergy4" /> Shellfish</label>
                            <label><input type="checkbox" name="allergy[]" value="allergy5" /> Tree nuts</label>
                            <label><input type="checkbox" name="allergy[]" value="allergy6" /> Peanuts</label>
                            <label><input type="checkbox" name="allergy[]" value="allergy7" /> Wheat</label>
                            <label><input type="checkbox" name="allergy[]" value="allergy8" /> Soybeans</label>
                            <label><input type="checkbox" name="allergy[]" value="allergy9" /> None</label>
                        </div>
                    </div>
                </fieldset>
                <!-- End allergy page -->

                <!-- Start preference page -->
                <fieldset class="page">
                    <legend class="form-legend">Do you have any preferences?</legend>

                    <div class="field">
                        <div class="preference-group">
                            <label><input type="radio" name="preference[]" value="preference1" /> Vegetarian</label>
                            <label><input type="radio" name="preference[]" value="preference2" /> Pescatarian</label>
                            <label><input type="radio" name="preference[]" value="preference3" /> Flexitarian</label>
                            <label><input type="radio" name="preference[]" value="preference4" /> Vegan</label>
                            <label><input type="radio" name="preference[]" value="preference5" /> Halal</label>
                            <label><input type="radio" name="preference[]" value="preference6" /> Kosher</label>
                            <label><input type="radio" name="preference[]" value="preference7" /> None</label>
                        </div>
                    </div>
                </fieldset>
                <!-- End preference page -->

                <!-- Start notes page -->
                <fieldset class="page">
                    <legend class="form-legend">Do you have any notes for the chef?</legend>

                    <div class="field">
                        <div class="notes-group">
                            <textarea id="note" name="note"></textarea>
                        </div>
                    </div>

                    <div class="field">
                        <button type="submit" class="submit">Send</button>
                    </div>
                </fieldset>
                <!-- End notes page -->
            </form>
        </article>
    </section>
</main>

<%- include('./partials/foot.ejs') %>
